    </genStep>
  </GenStepDef>

  <MapGeneratorDef>
    <defName>UV_AncientStockpile</defName>
    <label>ancient stockpile</label>
    <isUnderground>true</isUnderground>
    <disableCallAid>true</disableCallAid>
    <pocketMapProperties>
      <biome>UV_SpaceUndercave</biome>
      <temperature>-75</temperature>
      <canBeCleaned>true</canBeCleaned>
    </pocketMapProperties>
    <genSteps>
      <li>ElevationFertility</li>
      <li>Underground_RocksFromGrid</li>
      <li>Terrain</li>
      <li>RockChunks</li>
      <!-- AncientStockpile added by AncientHatch -->
      <li>Fog</li>
      <li>UV_AncientHatch_DeathPall_GenStep</li>
      <li>UV_AncientHatch_Entity_GenStep</li>
    </genSteps>
  </MapGeneratorDef>

  <GenStepDef>
    <order>3600</order>
    <defName>UV_AncientHatch_Entity_GenStep</defName>
    <genStep Class="VoidUniverse.GenStep_Entiy">
    </genStep>
  </GenStepDef>

  <GenStepDef>
    <order>1200</order>
    <defName>UV_AncientHatch_DeathPall_GenStep</defName>
