  <WorldObjectDef ParentName="GeneratedAsteroid">
    <defName>UV_HatchAsteroid</defName>
    <label>asteroid underground base</label>    <!-- hidden -->
    <description>An asteroid whose interior has been refitted into an underground base. It exudes an ominous aura, with unknown dust particles continuously wafting from within.
You may attempt to venture deeper inside.</description>
    <expandingIconTexture>World/WorldObjects/Expanding/UV_DeathPallPlatform</expandingIconTexture>
    <overrideMapSize>(250,1,250)</overrideMapSize>
    <mapGenerator>UV_MapGeneratorDef_AncientHatch</mapGenerator>
  </WorldObjectDef>


  <MapGeneratorDef ParentName="SpaceMapGenerator">
    <defName>UV_MapGeneratorDef_PitGateAsteroid</defName>
    <label>basic asteroid</label>
    <genSteps>
      <li>AsteroidBasic</li>
      <li>AsteroidBasicTransportPods</li>
      <li>AncientMiningCharge_Asteroid</li>
      <li>AncientExplosivesCrate_Asteroid</li>
      <li>AncientDrillPlatform_Asteroid</li>
      <li>AncientTuneller_Asteroid</li>
      <li>MechShipChunk_Asteroid</li>
      <li>RockChunks</li>
      <li>UV_PitGate_GenStep</li>
    </genSteps>
  </MapGeneratorDef>


  <GenStepDef>
    <order>1200</order>
    <defName>UV_PitGate_GenStep</defName>
    <genStep Class="VoidUniverse.GenStep_PitGateAsteroid">
      <pitGate>UV_DreadmeldPitGate</pitGate>
    </genStep>
  </GenStepDef>

  <MapGeneratorDef ParentName="SpaceMapGenerator">
