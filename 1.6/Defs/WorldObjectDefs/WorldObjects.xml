<Defs>

  <WorldObjectDef ParentName="GeneratedAsteroid">
    <defName>UV_PitGateAsteroid</defName>
    <label>pit gate asteroid</label>    <!-- hidden -->
    <description>An asteroid marked by a massive crater, exuding an ominous aura. It conceals a network of caves leading deep into its core.
You may attempt to venture deeper inside.</description>
    <expandingIconTexture>World/WorldObjects/Expanding/UV_AsteroidPitGate</expandingIconTexture>
    <overrideMapSize>(250,1,250)</overrideMapSize>
    <mapGenerator>UV_MapGeneratorDef_PitGateAsteroid</mapGenerator>
  </WorldObjectDef>

  <WorldObjectDef ParentName="GeneratedAsteroid">
    <defName>UV_HeartPitGateAsteroid</defName>
